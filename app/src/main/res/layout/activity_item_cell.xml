<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activityViewModel" type="com.home.android.piperbike.ui.activity.ActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
    >

        <TextView
                android:id="@+id/textActivityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:maxLines="4"
                android:textColor="@color/colorWhite"
                app:mutableText="@{activityViewModel.getActivityTitle}"
                android:textSize="24sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"/>

        <TextView
                android:id="@+id/textActivityDistance"
                android:layout_width="wrap_content"
                android:text="distance"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textActivityName" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>